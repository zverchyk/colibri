---
import Layout from "./Layout.astro";
import downloadPic from "../assets/icons/download.png";
const { frontmatter } = Astro.props;
const pic = frontmatter.image;
---

<Layout pageTitle={frontmatter.title}>
    <div class="game__container">
        <div class="game_title_block">
            <h1 class="title">Dragon Place</h1>
            <button class="icon-button">
                <img src={downloadPic.src} alt="" /></button
            >
        </div>

        <section class="banner">
            <img src={pic} alt="Giveaway Banner" />
            <div class="play-button">â–¶</div>
        </section>
    </div>
</Layout>
<style>
    .game__container {
        font-family: sans-serif;
        background-color: #1e1e2f;
        color: white;
        margin: 0;
        padding: 0;
    }

    .game_title_block {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: black;
        color: white;
        padding: 0.5em 1em;
    }

    .icon-button {
        background: white;
        border: none;
        font-size: 1.2em;
        cursor: pointer;
        padding: 0.2em 0.5em;
    }

    .banner img {
        width: 100%;
        max-width: 500px;
        display: block;
        margin: 0 auto;
    }

    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        color: black;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5em;
    }

    .menu {
        text-align: center;
        margin: 1em 0;
    }

    .menu button {
        background: black;
        color: white;
        padding: 0.5em 2em;
        border: none;
        font-weight: bold;
    }
</style>
