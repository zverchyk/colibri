---
import logo from "../assets/logo.png";
import Socials from "./SocialLinks.jsx";
import instagram from "../assets/icons/instagram.png";
import tiktok from "../assets/icons/tik-tok.png";
import twitter from "../assets/icons/twitter.png";
import whatsapp from "../assets/icons/whatsapp.png";
import youtube from "../assets/icons/youtube.png";
---

<footer>
    <div class="footer__contatiner">
        <div class="newsletter">
            <div class="newsletter__title">SIGN UP TO NEWSLETTER</div>
            <input type="text" class="newsletter__input" />
        </div>
        <div class="logo">
            <img src={logo.src} alt="" />
        </div>
        <div class="socials">
            <Socials socialIcon={twitter} socialLink="https://x.com" />
            <Socials socialIcon={tiktok} socialLink="https://tiktok.com" />
            <Socials socialIcon={whatsapp} socialLink="https://whatsapp.com" />
            <Socials
                socialIcon={instagram}
                socialLink="https://instagram.com"
            />
            <Socials socialIcon={youtube} socialLink="https://youtube.com" />
        </div>
    </div>
    <p>copyright</p>
</footer>

<style>
    footer {
        text-align: center;
        width: 100%;
        max-width: 1300px;
        margin: 0 auto;
        background-color: var(--layout);
        color: var(--font);
    }
    .footer__contatiner {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        height: 100px;
    }
    .logo img {
        width: 100px;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 20%;
    }
    .newsletter {
        display: flex;
        justify-content: start;
        flex-direction: column;
        align-items: start;
    }
    .newsletter__title {
        font-size: 20px;
    }
    .newsletter__input {
        width: 100%;
        color: #fff; /* Text color */
        background-color: var(--font-background);
        padding: 10px; /* Optional for spacing */
        border-radius: 5px;
    }
</style>
