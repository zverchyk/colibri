---
const { title, date, img, url } = Astro.props;
---

<div class="news_element aboutHover">
    <div class="element_img">
        <img src={img} alt="there should've been some kind of pic" />
    </div>
    <div class="element_info">
        <div class="element_title">{title}</div>
        <div class="element_date">{date}</div>
    </div>
    <a href={url}>READ MORE</a>
</div>

<style>
    .news_element {
    }

    .element_img {
        position: relative;
    }

    .element_info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 20px;
    }

    .element_title {
    }

    .element_date {
    }
</style>
