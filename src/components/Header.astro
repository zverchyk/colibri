---
import Navigation from "./Navigation.astro";
import Burger from "./Burger.astro";
import logo from "../assets/logo.png";
---

<header>
    <div class="logo">
        <img src={logo.src} alt="" />
    </div>
    <nav>
        <Burger />

        <Navigation />
    </nav>
</header>

<style>
    img {
        width: 100px;
    }
    header {
        text-align: center;
        width: 100%;
        max-width: 1300px;
        display: flex;
        margin: 0 auto;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: var(--layout);
    }
</style>
