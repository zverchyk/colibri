---
import Navigation from "./Navigation.astro";
import Burger from "./Burger.astro";
import logo from "../assets/logo.png";
---

<header>
    <div class="logo">
        <a href="/">
            <img src={logo.src} alt="Logo" />
        </a>
    </div>
    <nav>
        <Burger />

        <Navigation />
    </nav>
</header>

<style>
    img {
        width: 100px;
    }
    header {
        text-align: center;
        width: 100%;

        display: flex;

        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: var(--layout);
    }
</style>
