---
import ImageSlider from "../components/ImageSlider.jsx";
import img1 from "../assets/slider-1.png";
import img2 from "../assets/slider-2.png";
import img3 from "../assets/slider-3.png";
import "../styles/slider.css";
---

<div class="home_container">
    <ImageSlider
        images={[img1, img2, img3]}
        sliderNumber="preact-slider-main"
        client:load
    />

    <div class="small_sliders">
        <ImageSlider
            images={[img1, img2, img3]}
            sliderNumber="preact-slider-2"
            client:load
        />
        <ImageSlider
            images={[img1, img2, img3]}
            sliderNumber="preact-slider-3"
            client:load
        />
    </div>
</div>
